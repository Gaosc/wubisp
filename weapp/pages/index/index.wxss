/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.character {
  position: relative;
  height: 50px;
  margin-top: 100px;
  width: 300px;
}

.character-input {
  position: absolute;
  top: 12.5px;
  height: 25px;
  left: 10%;
}

.character-button {
  position: absolute;
  right: 10%;
}

.img {
  position: relative;
  height: 56px;
  margin-top: 20px;
  width: 220px;
}